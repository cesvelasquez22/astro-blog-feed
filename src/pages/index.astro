---
import { getCollection } from "astro:content";
import BlogPost from "../components/TypedBlogPost.astro";
import { siteConfig } from "../config/site-config";
import PageLayout from "../layouts/PageLayout.astro";

const posts = await getCollection("blog", (post) => !post.data.isDraft);
---

<PageLayout title="Home | Blog">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <a class="mr-2" href="/blog/1">Blog paginado</a>
      <a class="mr-2" href="/authors">Autores</a>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost post={post} />)}
      </div>
    </div>
  </section>
</PageLayout>

<style>
  @reference "../styles/global.css";
  a {
    @apply text-blue-500 hover:underline;
  }
</style>
